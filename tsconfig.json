{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
    
  },
  "include": ["src/**/*.ts", "src/types.d.ts"],
  "exclude": ["node_modules", "dist"]
}
